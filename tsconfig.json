{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "declaration": false,
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "files": [
        "types/jest.d.ts"
    ],
    "include": [
        "rules",
        "utils"
    ],
    "exclude": [
        "node_modules",
        "sandbox.ts",
        "**/*.spec.ts"
    ]
}
